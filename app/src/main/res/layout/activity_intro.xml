<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.thomasmore.flinkspreken.Intro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:onClick="start">

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/varken"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/varken" />

            <ImageView
                android:id="@+id/hond"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/hond" />
        </LinearLayout>


        <TextView
            android:id="@+id/intro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/smarc_font"
            android:text="@string/app_name"
            android:textColor="@color/blauw"
            android:textSize="70dp" />


        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/oor"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/oor" />

            <ImageView
                android:id="@+id/nijlpaard"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/nijlpaard_small" />
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
