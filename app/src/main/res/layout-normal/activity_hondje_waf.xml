<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.thomasmore.flinkspreken.HondjeWaf">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/hond-bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/hond2" />

            <ImageView
                android:id="@+id/bot"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="140dp"
                android:onClick="onClickButtonBot"
                android:src="@drawable/bot" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hond-bot"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_marginTop="70dp">

            <ImageView
                android:id="@+id/tekening1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginRight="28dp" />

            <ImageView
                android:id="@+id/tekening2"
                android:layout_width="140dp"
                android:layout_height="140dp" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="onClickButtonOpslaan"
            android:text="Opslaan" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
